<Window x:Class="EditarePDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditarePDF"
        mc:Ignorable="d"
        Title="EditarePDF" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Meniu/Butoane -->
            <RowDefinition Height="*"/>
            <!-- Zona de editare -->
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="#F0F0F0" Margin="10,0,10,0">
            <Button Content="Deschide PDF" Click="OpenPdf_Click" Margin="5"/>
            <Button Content="Radieră (Alb)" Click="Eraser_Click" Margin="5"/>
            <Button Content="Convertire Word" Click="ConvertToWord_Click" Margin="5"/>
        </StackPanel>

        <!-- Canvas-ul unde vom desena și șterge -->
        <Grid Grid.Row="1" x:Name="ContainerGrid">
            <!-- Imaginea PDF-ului va sta în spate -->
            <Image x:Name="PdfDisplayImage" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <!-- Stratul pentru radieră (cerneală albă) -->
            <InkCanvas x:Name="EraserCanvas" 
               Background="Transparent" 
               EditingMode="None" 
               HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
    </Grid> 
</Window>
